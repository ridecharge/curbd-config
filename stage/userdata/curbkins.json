{
  "script": [
    "#!/bin/sh",
    "/root/startup.sh",
    "docker run -d \\",
    "--restart=always \\",
    "--log-driver=syslog \\",
    "--name consul \\",
    "-p 8300:8300/tcp -p 8500:8500/tcp \\",
    "-p 8301:8301/udp -p 8301:8301/tcp \\",
    "$DOCKER_REPO/consul:latest",
    "docker run -d \\",
    "--restart=always \\",
    "--log-driver=syslog \\",
    "--name $SERVICE_NAME \\",
    "--link consul:consul \\",
    "-e ENVIRONMENT=$ENVIRONMENT \\",
    "-v /var/run/docker.sock:/var/run/docker.sock \\",
    "-v $(which docker):/usr/bin/docker \\",
    "$DOCKER_REPO/$SERVICE_NAME:$VERSION",
    "docker run -d \\",
    "--restart=always \\",
    "--log-driver=syslog \\",
    "--name nginx \\",
    "-e SERVICE_NAME=$SERVICE_NAME \\",
    "--link $SERVICE_NAME:app \\",
    "--link logging:logging \\",
    "--link consul:consul \\",
    "-p 8080:8080 \\",
    "$DOCKER_REPO/nginx"
  ]
}
