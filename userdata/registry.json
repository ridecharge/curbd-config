{
  "script": [
    "#!/bin/sh",
    "/root/startup.sh",
    "docker run -d \\",
    "--restart=always \\",
    "--name consul \\",
    "--log-driver=syslog \\",
    "-p 8300:8300/tcp -p 8500:8500/tcp \\",
    "-p 8301:8301/udp -p 8301:8301/tcp \\",
    "$DOCKER_REPO/consul:latest",
    "docker run -d \\",
    "--restart=always \\",
    "--name $SERVICE_NAME \\",
    "-e SETTINGS_FLAVOR=s3 \\",
    "-e STORAGE_PATH=/registry \\",
    "-e AWS_BUCKET=global-$SERVICE_NAME-private \\",
    "-e AWS_KEY=$AWS_KEY \\",
    "-e AWS_SECRET=$AWS_SECRET \\",
    "-e SEARCH_BACKEND=sqlalchemy \\",
    "$SERVICE_NAME:$VERSION",
    "docker run -d \\",
    "--restart=always \\",
    "--name nginx \\",
    "-e SERVICE_NAME=$SERVICE_NAME \\",
    "--link $SERVICE_NAME:app \\",
    "--link logging:logging \\",
    "--link consul:consul \\",
    "-p 8080:8080 \\",
    "$DOCKER_REPO/nginx:latest"
  ]
}