{
  "script": [
    "#!/bin/sh",
    "/root/startup.sh",
    "docker run -d \\",
    "--restart=always \\",
    "--name consul \\",
    "--log-driver=syslog \\",
    "-p 8300:8300/tcp -p 8500:8500/tcp \\",
    "-p 8301:8301/udp -p 8301:8301/tcp \\",
    "$DOCKER_REPO/consul:latest",
    "docker run -d \\",
    "--restart=always \\",
    "--name $SERVICE_NAME \\",
    "--log-driver=syslog \\",
    "-e S3_BUCKET=global-$SERVICE_NAME-private \\",
    "-e AWS_ACCESS_KEY=$AWS_ACCESS_KEY \\",
    "-e AWS_SECRET_KEY=$AWS_SECRET_KEY \\",
    "-e AWS_REGION=$AWS_REGION \\",
    "-e NR_TOKEN=$NR_TOKEN \\",
    "-e ENVIRONMENT=$ENVIRONMENT \\",
    "--link logging:logging \\",
    "$DOCKER_REPO/$SERVICE_NAME:$VERSION",
    "docker run -d \\",
    "--restart=always \\",
    "--name nginx \\",
    "--log-driver=syslog \\",
    "-e SERVICE_NAME=$SERVICE_NAME \\",
    "--link $SERVICE_NAME:app \\",
    "--link logging:logging \\",
    "--link consul:consul \\",
    "-p 8080:8080 \\",
    "$DOCKER_REPO/nginx:latest"
  ]
}